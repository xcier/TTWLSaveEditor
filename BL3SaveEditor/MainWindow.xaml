<adonisControls:AdonisWindow
    x:Class="TTWSaveEditor.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:bl3tools="clr-namespace:BL3Tools;assembly=BL3Tools"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:TTWSaveEditor.Helpers"
    xmlns:local="clr-namespace:TTWSaveEditor"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Title="Tiny Tina's Wonderlands Save Editor"
    Height="835" Width="1330"
    Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
    Closed="AdonisWindow_Closed"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    UseLayoutRounding="True"
    mc:Ignorable="d">
    <Window.Style>
        <Style BasedOn="{StaticResource {x:Type Window}}" TargetType="Window" />
    </Window.Style>
    <Window.Resources>
        <helpers:SearchVisibilityConverter x:Key="SearchConverter"/>
        <LinearGradientBrush x:Key="fdh" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Offset="0" Color="Red" />
            <GradientStop Offset="1.15" Color="Gold" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="awt" StartPoint="0,0.5" EndPoint="1,0.5">
            <GradientStop Offset="0" Color="Purple" />
            <GradientStop Offset="1.15" Color="MediumOrchid" />
        </LinearGradientBrush>
        <helpers:IntegerSecondsToTimeSpanConverter x:Key="IntegerToSpanConverter1" />
        <helpers:EXPointToLevelConverter x:Key="EXPToLevelConverter1" />
        <helpers:LevelToEXPointConverter x:Key="LevelToEXPConverter1" />
        <helpers:StringToAbilityBranchConverter x:Key="StringToAbilityBranchConverter1" />
        <helpers:StringToCharacterClassConverter x:Key="CharacterClassConverter1" />
        <helpers:StringToPlayerAspectDataConverter x:Key="PlayerAspcetDataConverter1" />
        <helpers:StringToPlayerPronounDataConverter x:Key="PlayerPronounDataConverter1" />
        <helpers:CustomPlayerColorToColorConverter x:Key="CustomPlayerColorToColorConverter1" />
        <helpers:CurrencyToIntegerConverter x:Key="MoneyToIntegerConverter" />
        <helpers:CurrencyToIntegerConverter x:Key="EridiumToIntegerConverter" />
        <helpers:TravelStationConverter x:Key="TravelStationConverter1" />
        <helpers:PlaythroughToStringConverter x:Key="PlaythroughToStringConverter1" />

        <helpers:MythPointsToDataGridConverter x:Key="MythPointsToDataGridConverter1" />
        <helpers:ProfileSDUToIntegerConverter x:Key="SDUConverter1" />
        <helpers:KeyToIntegerConverter x:Key="KeyToIntegerConverter1" />

        <helpers:MultiElementObjectBinder x:Key="MultiElementObjectBinder1" />
        <helpers:IntegerToMayhemLevelConverter x:Key="IntegerToMayhemLevelConverter1" />
        <helpers:ChallengeToBooleanConverter x:Key="ChallengeToBooleanConverter1" />
        <helpers:ItemSlotConverter x:Key="ItemSlotConverter1" />

        <helpers:AndConverter x:Key="AndConverter1" />
        <helpers:IntegerLimiterConverter x:Key="IntegerLimiterConverter1" />

        <ObjectDataProvider
            x:Key="PlatformDataSource"
            MethodName="GetValues"
            ObjectType="{x:Type bl3tools:Platform}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="bl3tools:Platform" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>

    <adonisControls:AdonisWindow.TitleBarContent>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Name="DbgBtn"
                Click="DbgBtn_Click"
                DockPanel.Dock="Right">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\fugue\wrench-screwdriver.png" />
                    <Label
                        Content="Debug"
                        FontFamily="Segoe UI"
                        FontSize="14"
                        FontWeight="Medium" />
                </StackPanel>
            </Button>
        </StackPanel>
    </adonisControls:AdonisWindow.TitleBarContent>

    <Grid>
        <ToolBar
            x:Uid="ToolWindowToolbar"
            Height="30"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AllowDrop="False"
            Background="{DynamicResource {x:Static adonisUi:Brushes.Layer0BackgroundBrush}}"
            Focusable="False">
            <!--  I'm hiding this button for now because I find it to be a pain to work on  -->
            <Button
                Name="NewSaveBtn"
                Click="NewSaveBtn_Click"
                Visibility="Collapsed">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\fugue\document-binary.png" />
                    <Label Content="New" FontWeight="Medium" />
                </StackPanel>
            </Button>

            <Button Name="OpenSaveBtn" Click="OpenSaveBtn_Click">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\fugue\folder-open-document.png" />

                    <Label Content="Open" FontWeight="Medium" />
                </StackPanel>
            </Button>

            <Button
                Name="SaveSaveBtn"
                Click="SaveSaveBtn_Click"
                IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\fugue\disk-black.png" />

                    <Label Content="Save" FontWeight="Medium" />
                </StackPanel>
            </Button>

            <Button
                Name="SaveAsSaveBtn"
                Click="SaveAsSaveBtn_Click"
                IsEnabled="False">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="0,0,5,0"
                        RenderOptions.BitmapScalingMode="Fant"
                        Source="Icons\fugue\disk--plus.png" />
                    <Label Content="Save As" FontWeight="Medium" />
                </StackPanel>
            </Button>

            <Separator BorderThickness="1" />
        </ToolBar>

        <TabControl
            Name="TabCntrl"
            Margin="0,30,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <TabItem IsEnabled="{Binding saveGame, TargetNullValue=False}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="27"
                            Height="26"
                            Margin="0,0,5,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            Source="Icons\game\ECHOComm_IE.png" />
                        <Label
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="General"
                            FontWeight="Medium" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <Label
                        Width="101"
                        Height="24"
                        Margin="10,41,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        Content="Save GUID:"
                        FontWeight="Normal" />
                    <TextBox
                        Name="GUIDTextBox"
                        Height="25"
                        Margin="116,40,418,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        IsEnabled="{Binding Path=bSaveLoaded}"
                        Text="{Binding Path=saveGame.Character.SaveGameGuid, Mode=TwoWay}"
                        TextWrapping="Wrap"
                        ToolTip="A randomly generated ID of your save; do not touch unless you know what you're doing" />
                    <Button
                        Name="RandomizeGUIDBtn"
                        Width="85"
                        Margin="0,41,328,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Click="RandomizeGUIDBtn_Click"
                        Content="Randomize"
                        RenderTransformOrigin="2.353,0.208"
                        ToolTip="Randomizes the GUID associated with your save" />

                    <Label
                        Width="101"
                        Height="20"
                        Margin="10,70,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        Content="Save Game Slot:"
                        FontWeight="Normal" />
                    <xctk:IntegerUpDown
                        Margin="116,70,328,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        IsEnabled="{Binding Path=bSaveLoaded}"
                        ToolTip="A number associated with your save; do not touch unless you know what you're doing"
                        Value="{Binding Path=saveGame.Character.SaveGameId, Mode=TwoWay}" />

                    <Label
                        Height="20"
                        Margin="10,95,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        Content="Total Time Played: "
                        FontWeight="Normal" />
                    <xctk:TimeSpanUpDown
                        Margin="116,95,328,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        IsEnabled="{Binding Path=bSaveLoaded}"
                        ToolTip="Format: Days.Hours:Minutes:Seconds"
                        Value="{Binding Path=saveGame.Character.TimePlayedSeconds, Mode=TwoWay, Converter={StaticResource IntegerToSpanConverter1}}" />
                    <Label
                        Width="101"
                        Height="25"
                        Margin="10,10,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        Content="Platform:"
                        FontWeight="Normal" />

                    <ComboBox
                        Name="cbPlatform"
                        Height="25"
                        Margin="116,10,328,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        ItemsSource="{Binding Source={StaticResource PlatformDataSource}}"
                        SelectedValue="{Binding Path=saveGame.Platform}" />
                </Grid>
            </TabItem>

            <TabItem IsEnabled="{Binding saveGame, TargetNullValue=False}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="27"
                            Height="26"
                            Margin="0,0,5,0"
                            RenderOptions.BitmapScalingMode="Fant"
                            Source="Icons\game\MinimapIcon_QuickChange.png" />
                        <Label
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Content="Character"
                            FontWeight="Medium" />
                    </StackPanel>
                </TabItem.Header>

                <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Margin="0,0,8,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="232" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <GroupBox VerticalAlignment="Top" Height="124" Grid.RowSpan="2">
                            <Grid Height="113">
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Customization" />

                                <Grid Margin="0,20,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Character Name"
                                        FontWeight="Normal" />

                                    <TextBox
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Text="{Binding Path=saveGame.Character.PreferredCharacterName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        TextWrapping="WrapWithOverflow" />
                                </Grid>

                                <Grid Margin="0,52,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Pronoun"
                                        FontWeight="Normal" />

                                    <ComboBox
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        ItemsSource="{Binding Path=ValidPlayerPronouns}"
                                        SelectedValue="{Binding saveGame.Character.PlayerPronounSelection, Mode=TwoWay, Converter={StaticResource PlayerPronounDataConverter1}}"
                                        ToolTip="The pronoun of your character" />
                                </Grid>
                                <Label
                                    Width="140"
                                    Height="24"
                                    Margin="0,83,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Content="Companion Name"
                                    FontWeight="Normal" />
                                <TextBox
                                    Margin="140,83,0,0"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    IsEnabled="{Binding bSaveLoaded}"
                                    Text="{Binding saveGame.Character.NicknameMappings[0].Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="WrapWithOverflow" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="1" VerticalAlignment="Top" Height="243" Grid.RowSpan="2" Margin="0,39,0,0">
                            <Grid>
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Inventory Slots" />

                                <Grid Margin="0,20,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Secondary Class"
                                        IsChecked="{Binding saveGame.Character.AbilityData.DualClassSaveData.UnlockedInitialSecondaryClass}" />
                                </Grid>

                                <Grid Margin="0,48,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Weapon Slot #3"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=Weapon3, Converter={StaticResource ItemSlotConverter1}}" />
                                    <Grid Margin="0,96,0,0" VerticalAlignment="Top">
                                        <CheckBox
        Width="110"
        Height="20"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        VerticalContentAlignment="Center"
        Content="Weapon Slot #4"
        IsChecked="{Binding saveGame.Character, ConverterParameter=Weapon4, Converter={StaticResource ItemSlotConverter1}}" Margin="0,-73,0,0" />
                                    </Grid>

                                </Grid>

                                <Grid Margin="0,76,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Ring (Left)"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=Ring1, Converter={StaticResource ItemSlotConverter1}}" Margin="0,18,0,-18" />
                                </Grid>

                                <Grid Margin="0,104,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Ring (Right)"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=Ring2, Converter={StaticResource ItemSlotConverter1}}" Margin="0,18,0,-18" />
                                </Grid>

                                <Grid Margin="0,132,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Pauldron"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=Pauldron, Converter={StaticResource ItemSlotConverter1}}" Margin="0,18,0,-18" />
                                </Grid>

                                <Grid Margin="0,160,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Amulet"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=Amulet, Converter={StaticResource ItemSlotConverter1}}" Margin="0,18,0,-18" />
                                </Grid>

                                <Grid Margin="0,188,0,0" VerticalAlignment="Top">
                                    <CheckBox
                                        Width="110"
                                        Height="20"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        VerticalContentAlignment="Center"
                                        Content="Secondary Spell"
                                        IsChecked="{Binding saveGame.Character, ConverterParameter=SecondSpell, Converter={StaticResource ItemSlotConverter1}}" Margin="0,18,0,-18" />
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="2" VerticalAlignment="Top" Height="102" Margin="0,55,0,0">
                            <Grid>
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Chaos Level" />

                                <Grid Margin="0,26,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Unlocked Level"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Name="ChaosUnlockedLevel"
                                        Height="23"
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Maximum="1000"
                                        Minimum="0"
                                        ToolTip="The unlocked level of Mayhem of your character."
                                        Value="{Binding saveGame.Character.GameStateSaveDataForPlaythroughs[0].MayhemUnlockedLevel, Mode=TwoWay}" />
                                </Grid>

                                <Grid Margin="0,58,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Current Level"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Name="ChaosCurrentLevel"
                                        Height="23"
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Maximum="1000"
                                        Minimum="0"
                                        ToolTip="The current enabled level of Mayhem of your character."
                                        Value="{Binding saveGame.Character.GameStateSaveDataForPlaythroughs[0].MayhemLevel, Mode=TwoWay}" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="100" />
                            <RowDefinition Height="100" />
                            <RowDefinition Height="260" />
                        </Grid.RowDefinitions>

                        <GroupBox VerticalAlignment="Top">
                            <Grid>
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Experience" />

                                <Grid Margin="0,20,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Level"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        Maximum="{Binding Path=maximumXP}"
                                        Minimum="{Binding Path=minimumXP}"
                                        ToolTip="XP Level of your save"
                                        Value="{Binding Path=saveGame.Character.ExperiencePoints, Mode=TwoWay, Converter={StaticResource EXPToLevelConverter1}}" />
                                </Grid>

                                <Grid Margin="0,52,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Skill Points"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        Minimum="0"
                                        ToolTip="Current skill points available on the save"
                                        Value="{Binding saveGame.Character.AbilityData.AbilityPoints, Mode=TwoWay}" />
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="1" VerticalAlignment="Top">
                            <Grid>
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Classes" />

                                <Grid Margin="0,20,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Primary Class"
                                        FontWeight="Normal" />

                                    <ComboBox
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        ItemsSource="{Binding Path=ValidAbilityBranches}"
                                        SelectedValue="{Binding Path=saveGame.Character.AbilityData.DualClassSaveData.PrimaryBranchPath, Mode=TwoWay, Converter={StaticResource StringToAbilityBranchConverter1}}"
                                        SelectionChanged="CharacterClass_SelectionChanged" />
                                </Grid>

                                <Grid Margin="0,52,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Secondary Class"
                                        FontWeight="Normal" />

                                    <ComboBox
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        ItemsSource="{Binding Path=ValidAbilityBranches}"
                                        SelectedValue="{Binding Path=saveGame.Character.AbilityData.DualClassSaveData.SlottedSecondaryBranchPath, Mode=TwoWay, Converter={StaticResource StringToAbilityBranchConverter1}}"
                                        SelectionChanged="CharacterClass_SelectionChanged" />
                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Grid.Row="2" VerticalAlignment="Top">
                            <Grid>
                                <Label
                                    Height="18"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top"
                                    Content="Heroic Stats" />

                                <Grid Margin="0,20,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Twist of Fate"
                                        FontWeight="Normal" />

                                    <ComboBox
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding Path=bSaveLoaded}"
                                        ItemsSource="{Binding Path=ValidPlayerAspect}"
                                        SelectedValue="{Binding Path=saveGame.Character.HeroPointsSaveData.PlayerAspectDataPath, Mode=TwoWay, Converter={StaticResource PlayerAspcetDataConverter1}}"
                                        SelectionChanged="CharacterClass_SelectionChanged" />
                                </Grid>

                                <Grid Margin="0,52,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Strength"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Height="23"
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Minimum="0"
                                        ToolTip="Amount of Strength of your character."
                                        Value="{Binding saveGame.Character.HeroPointsSaveData.Strength, Mode=TwoWay}" />
                                </Grid>

                                <Grid Margin="0,84,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Dexterity"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Height="23"
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Minimum="0"
                                        ToolTip="Amount of Dexterity of your character."
                                        Value="{Binding saveGame.Character.HeroPointsSaveData.Dexterity, Mode=TwoWay}" />
                                </Grid>

                                <Grid Margin="0,116,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Top"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Intelligence"
                                        FontWeight="Normal" />

                                    <xctk:IntegerUpDown
                                        Height="23"
                                        Margin="140,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Top"
                                        IsEnabled="{Binding bSaveLoaded}"
                                        Minimum="0"
                                        ToolTip="Amount of Intelligence of your character."
                                        Value="{Binding saveGame.Character.HeroPointsSaveData.Intelligence, Mode=TwoWay}" />
                                </Grid>

                                <Grid Margin="0,148,0,0" VerticalAlignment="Top">
                                    <Label
                                        Width="140"
                                        Height="24"
                                        HorizontalAlignment="Left"
